<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    tools:context=".DrawFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:backgroundTint="@color/black_background"
        app:icon="@drawable/ic_back"
        app:iconSize="24dp"
        app:rippleColor="@color/black_background" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        app:cardBackgroundColor="@color/white_background"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <com.gleb.delineater.PaintView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!--<ImageView
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end">

        <com.google.android.material.button.MaterialButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:backgroundTint="@color/black_background"
            app:icon="@drawable/ic_eraser"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="32dp"
            app:rippleColor="@color/black_background" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:backgroundTint="@color/black_background"
            app:icon="@drawable/ic_pencil"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="32dp"
            app:rippleColor="@color/black_background" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:backgroundTint="@color/black_background"
            app:icon="@drawable/ic_brush"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="32dp"
            app:rippleColor="@color/black_background" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        style="@style/ColorButtonStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="15dp"
        app:backgroundTint="@color/purple_200" />

</FrameLayout>