<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ColorButtonStyle" parent="NoInsetsButtonStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">60dp</item>
    </style>

    <style name="BottomDrawButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/bar_size</item>
        <item name="android:layout_height">@dimen/bar_size</item>
        <item name="backgroundTint">@color/black_background</item>
        <item name="rippleColor">@color/black_background</item>
        <item name="elevation">0dp</item>
        <item name="iconTint">@color/poor_white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/top_icon_size</item>
    </style>

    <style name="NoInsetsButtonStyle">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
    </style>

    <style name="SocialsButtonStyle">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="DownloadRoundButtons" parent="NoInsetsButtonStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/simple_corner_button_size</item>
        <item name="android:layout_height">@dimen/download_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">@font/rubik_semibold</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_marginStart">@dimen/side_download_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/side_download_button_margin</item>
    </style>

    <style name="BaseRoundProgressBarStyle">
        <item name="android:layout_height">@dimen/round_progress_bar_size</item>
        <item name="android:layout_width">@dimen/round_progress_bar_size</item>
    </style>

    <style name="ColorPickDialogButtonStyle" parent="NoInsetsButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/color_pick_button_height</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/color_pick_button_text_size</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:letterSpacing">0</item>

    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_out_right</item>
        <item name="android:windowExitAnimation">@android:anim/slide_in_left</item>
    </style>

    <style name="ColorPickerDialogAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/color_picker_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/color_picker_exit_anim</item>
    </style>
</resources>